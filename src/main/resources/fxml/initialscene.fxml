<AnchorPane prefHeight="720.0" prefWidth="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml">
<children>
   <ImageView fitHeight="720.0" fitWidth="715.0" opacity="0.8" pickOnBounds="true" preserveRatio="true">
	  <image>
		  <Image url="@../images/starting_background.jpg" />
	  </image>
   </ImageView>
   <VBox fx:id="startLayout" alignment="CENTER" layoutX="252.0" layoutY="427.0" prefHeight="188.0" prefWidth="213.0" spacing="40.0">
	  <children>
		 <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="169.0" text="Create match" onAction="#selectCreateHandler">
			<font>
			   <Font name="System Bold Italic" size="16.0" />
			</font>
			<opaqueInsets>
			   <Insets />
			</opaqueInsets>
		 </Button>
		 <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="169.0" text="Join match" onAction="#selectJoinHandler">
			<font>
			   <Font name="System Bold Italic" size="16.0" />
			</font>
		 </Button>
	  </children>
   </VBox>
   <VBox fx:id="createLayout" alignment="CENTER" layoutX="252.0" layoutY="253.0" prefHeight="188.0" prefWidth="213.0" spacing="20.0">
	  <children>
		 <Label text="How many players?" textAlignment="CENTER">
			<font>
			   <Font name="System Bold" size="16.0" />
			</font>
		 </Label>
			<fx:define>
				<ToggleGroup fx:id="numPlayersGroup"/>
			</fx:define>
		 <RadioButton mnemonicParsing="false" text="1" toggleGroup="$numPlayersGroup" fx:id="rb1">
			<font>
			   <Font name="System Bold" size="16.0" />
			</font>
		 </RadioButton>
		 <RadioButton mnemonicParsing="false" text="2" toggleGroup="$numPlayersGroup" fx:id="rb2">
			<font>
			   <Font name="System Bold" size="16.0" />
			</font>
		 </RadioButton>
		 <RadioButton mnemonicParsing="false" text="3" toggleGroup="$numPlayersGroup" fx:id="rb3">
			<font>
			   <Font name="System Bold" size="16.0" />
			</font>
		 </RadioButton>
		 <RadioButton mnemonicParsing="false" text="4" toggleGroup="$numPlayersGroup" fx:id="rb4">
			<font>
			   <Font name="System Bold" size="16.0" />
			</font>
		 </RadioButton>
		 <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="169.0" text="Create match" onAction="#createHandler">
			<font>
			   <Font name="System Bold Italic" size="16.0" />
			</font>
		 </Button>
	  </children>
   </VBox>
   <VBox fx:id="joinLayout" alignment="CENTER" layoutX="226.0" layoutY="247.0" prefHeight="228.0" prefWidth="262.0" spacing="20.0">
	  <children>
		 <Label text="Match name?" textAlignment="CENTER">
			<font>
			   <Font name="System Bold" size="16.0" />
			</font>
		 </Label>
		 <TextField fx:id="matchText" prefHeight="24.0" prefWidth="0.0" />
		 <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="169.0" text="Join match" onAction="#joinHandler">
			<font>
			   <Font name="System Bold Italic" size="16.0" />
			</font>
		 </Button>
	  </children>
   </VBox>
   <Label layoutX="278.0" layoutY="167.0" text="Choose nickname" textAlignment="CENTER">
	  <font>
		 <Font name="System Bold" size="16.0" />
	  </font>
   </Label>
   <TextField fx:id="nicknameText" layoutX="267.0" layoutY="199.0" prefHeight="24.0" prefWidth="181.0" />
	 <Button fx:id="cancelButton" layoutX="278.0" layoutY="520.0" prefHeight="28.0" prefWidth="169.0" text="Cancel" onAction="#cancelHandler">
		<font>
		   <Font name="System Bold Italic" size="16.0" />
		</font>
	 </Button>
</children>
</AnchorPane>
