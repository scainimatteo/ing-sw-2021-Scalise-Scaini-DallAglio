@startuml

/' CLASSES DEFINITION '/
abstract class View {
	# SimpleGame simple_game;
	# SimplePlayer[] simple_players;
	# Turn turn
	+ void startView(ArrayBlockingQueue<Message> messages)
} 

class CLI {
	+ String printMarket();
	+ String printDevelopmentCardsOnTable()
	+ String printTrack(String player_nickname);
	+ String printWarehouse(String player_nickname)
	+ String printStrongBox(String player_nickname)
	+ String printLeaderCards(String player_nickname)
	+ String printDevelopmentCardsSlots(String player_nickname)
}

class GUI {
}

class SimpleGame {
	- Resource[][] market;
	- Resource free_marble;
	- DevelopmentCard[][] development_cards_on_table;
}

class SimplePlayer {
	- String nickname
	- Cell[] faith_track
	- Cell faith_marker
	- Tile[] vatican_reports
	- SimpleWarehouse warehouse
	- HashMap<Resource, Integer> strongbox
	- LeaderCard[] leader_cards
	- SimpleDevelopmentCardSlots development_card_slots
}

class SimpleWarehouse {
	- Resource top_resource;
	- Resource[] middle_resources
	- Resource[] bottom_resources
}

class SimpleDevelopmentCardSlots {
	- DevelopmentCards[] first_column
	- DevelopmentCards[] second_column
	- DevelopmentCards[] third_column
}

/' RELATIONS DEFINITION '/
View <-- CLI
View <-- GUI
View -- SimpleGame
View -- SimplePlayer

SimpleGame <.up. Observable
SimplePlayer <.up. Observable
SimplePlayer -- SimpleWarehouse
SimplePlayer -- SimpleDevelopmentCardSlots

@enduml
